<?xml version="1.0" encoding="UTF-8"?>
<!-- High level launch file for Unit 5 exercises  -->
<!-- Requires simulation w/robot running -->
<launch>

  <!-- Run the map server to load a pre-made map -->
  <arg name="map_file" default="$(find unit5_exercises_pp)/maps/test_world.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!-- MOVE_BASE -->
  <include file="$(find unit5_exercises_pp)/launch/move_base.launch" />

  <!-- Determine whether to run Rviz or not & set Rviz config file-->
  <arg name="use_rviz" default="true" />
  <arg name="rvizconfig" default="$(find unit5_exercises_pp)/rviz/unit5_exercise.rviz"/>
  <!-- Launching Rviz -->
  <node if="$(arg use_rviz)" name="rviz" pkg="rviz" type="rviz" respawn="false" args="-d $(arg rvizconfig)"/>

  <!-- Start service server that responds with a plan for global path planning   unit5_exercise_solution_markers_v2.py -->
  <node pkg="unit5_exercises_pp" name="RRT_exercise" type="unit5_exercise.py" output="screen"/> 

</launch>
